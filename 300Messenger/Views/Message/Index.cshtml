@model IEnumerable<Message>

@{
    ViewData["Title"] = "Messages";
}

@foreach (var message in Model)
{
    var cutContent = message.Content.Length > 10 ? $"{message.Content.Substring(0, 10)}..." : message.Content;
    <a asp-controller="Message" asp-action="Details" asp-route-id="@message.Id">
        <p>From: @message.Email @cutContent</p>
    </a>
}
<hr />
<div>
    <h5><a asp-controller="Message" asp-action="Create">Post New Message</a></h5>
</div>
